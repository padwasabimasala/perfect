#!/bin/bash
function configure_perfcommon {
  purple Configuring perfcommon
  install_api_redirects
  server_addr=$(get_local_server_address)
  server_port=$(get_local_server_port)
  set_local_server_address $server_addr $server_port
}

function build_perfcommon {
  purple Building perfcommon
  cmd cd $INSTALL_DIR/perfcommon
  cmd ant clean install-artifacts
}

function build_perfext {
  local dbenv=$1
  local update=$2
  local skiptest=$3

  local mvn_opts="-Plocal -DdbEnv=$1"
  if test "$update" == "true"; then
    mvn_opts="$mvn_opts -U"
  fi
  if test "$skiptest" == "true"; then
    mvn_opts="$mvn_opts -DskipTests"
  fi
  mvn_opts="$mvn_opts clean package jboss:hard-deploy"

  purple Building perfext
  cmd cd $INSTALL_DIR/perfext
  cmd cp m2-settings.xml $HOME/.m2/settings.xml
  #cmd mvn -U -Plocal clean package jboss:hard-deploy # from the docs
  cmd mvn $mvn_opts
}


function install_api_redirects {
  purple Install Redirects for Catalog API
  # cmd mkdir -p $INSTALL_DIR/jboss/server/default/conf/jboss.web/localhost/
  # cmd 'echo "RewriteRule ^/api/(.*)$ https://dev.appreciatehub.com$0 [R,L]" >> $INSTALL_DIR/jboss/server/default/conf/jboss.web/localhost/rewrite.properties"'
  # cmd perl -pi -e 's/\\<Host name\\=\\"localhost\\"\\>\\/\\<Host name\\=\\"localhost\\"\\>\\<Valve className=\\"org.jboss.web.rewrite.RewriteValve\\" />/'
  # <Host name="localhost"> <Valve className="org.jboss.web.rewrite.RewriteValve" />
  # jboss/server/default/deploy/jbossweb.sar/server.xml
}

function set_local_server_address {
  purple Setting LOCAL_SERVER_ADDRESS=localhost
  #purple Setting LOCAL_SERVER_ADDRESS=$1 
  # We need to be careful modifying files to replace localhost, its used as a constant all over the codebase and
  # if not used on the DEV environment will typically break.  See references below:
  # perfcommon/seam-apps/application/src/hot/com/octanner/application/ordermanagement/controller/SocialNetworkingConfigurationController.java
  # perfcommon/seam-apps/application/src/hot/com/octanner/ntp/application/walloffame/WallOfFameClient.java
  # perfcommon/seam-apps/common/src/hot/java/com/octanner/common/constants/P42Constants.java
  # perfcommon/seam-apps/common/src/hot/java/com/octanner/common/service/usermanagement/URLTimerTask.java
  # perfcommon/seam-apps/common/src/hot/java/com/octanner/common/util/ExternalHubUtil.java
  # perfcommon/seam-apps/common/src/hot/java/com/octanner/common/ws/messages/SampleMessageWSServlet.java
  # perfcommon/seam-apps/common/src/main/java/com/octanner/common/redis/RedisServerInfo.java
  # perfcommon/seam-apps/common/src/main/java/com/octanner/common/ServerInformation.java
  # perfcommon/seam-apps/common/src/main/java/com/octanner/p42/pdf/RendererFilter.java 
  # cmd cd $INSTALL_DIR/perfcommon
  #local address="$1"
  #local port="$2"
  #local file='seam-apps/common/src/main/java/com/octanner/common/ServerInformation.java'
  #local line=$(grep -n 'private static final String LOCAL_SERVER_ADDRESS =' $file |cut -d: -f1)
  #cp $file ${file}.bak
  #cmd "perl -pi -e 's/\w+.*/private static final String LOCAL_SERVER_ADDRESS = \"$address:$port\";/ if \$. == $line' ${file}"
  #colordiff $file ${file}.bak
  #git checkout $file
}

function select_branch_or_warn {
  local branch=$(find_branch $1)
  if test "unset$branch" == "unset"; then
    warn "Unknown build option $1"
  else
    perfect-select skip_an_arg_for_the_cmd "$branch"
  fi
}

function find_branch {
  cd $INSTALL_DIR/perfcommon
  local branches=$(git branch |sed -e 's/\*/ /g')
  for branch in $branches; do
    if test $branch == $1; then
      echo $branch
    fi
  done
  echo ""
}

# Main
source $(which perfect-env)
init

build_ext=false
build_com=false
dbenv=dev
update=false
skiptest=true

shift # drop command name (eg build) from args
while test $# -ge 1 ; do
  case $1 in
    perfext) build_ext=true ;;
    ext) build_ext=true ;;

    perfcommon) build_com=true ;;
    common) build_com=true ;;
    com) build_com=true ;;

    dev) dbenv=dev ;;
    qa) dbenv=qa ;;
    prod) dbenv=prd ;;
    prd) dbenv=prd ;;
    stage) dbenv=stage ;;
    stg) dbenv=stage ;;

    update) update=true ;;
    u) update=true ;;
    noupdate) update=false ;;
    nu) update=false ;;

    test) skiptest=false ;;
    t) skiptest=false ;;
    notest) skiptest=true ;;
    nt) skiptest=true ;;

    *) select_branch_or_warn $1;;
  esac
  shift
done

# Main
if test $build_com == true || ( test $build_com == false && test $build_ext == false ); then
  configure_perfcommon
  build_perfcommon
fi
if test $build_ext == true || ( test $build_com == false && test $build_ext == false ); then
  build_perfext $dbenv $update $skiptest
fi
